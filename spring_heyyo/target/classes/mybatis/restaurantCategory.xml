<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="restaurantCategory">

	<insert id="create" parameterType="RestaurantCategoryDTO">
		INSERT INTO r_category(r_categorycode, r_categoryname) VALUES(#{r_categorycode}, #{r_categoryname})
	</insert>
	
	<update id="update" parameterType="RestaurantCategoryDTO">
		UPDATE r_category SET r_categoryname = #{r_categoryname} WHERE r_categorycode = #{r_categorycode}
	</update>
	
	<delete id="delete" parameterType="String">
		DELETE FROM r_category WHERE r_categorycode = #{r_categorycode}
	</delete>
</mapper>

